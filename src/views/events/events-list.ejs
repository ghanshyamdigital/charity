<div class="card">
    <div class="card-header">
        <h3 class="card-title">Events</h3>
        <div class="card-tools">
            <ul class="nav nav-pills ml-auto">
                <li class="nav-item">
                    <a class="btn btn-success" href="/events/add">Add</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="events-list" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Event Name</th>
                <th>Vanue</th>
                <th>Date</th>
                <th>Image</th>
                <th>Time</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <%if (data.length >0){ %>
                <% data.forEach(function(row){ %>

                    <tr>

                        <td><%= row.event_name %></td>
                        <td><%= row.vanue %></td>
                        <td><%= row.date %></td>
                        <td>
                            <% if(row.image[0]){ %>
                                <img src="./uploads/<%= row.image[0].filename %>" alt="profile image" width="80">
                            <% } %>
                        </td>
                        <td><%= row.time %></td>
                        <td><a class="btn btn-primary btn-xs" href="/events/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                            <a class="btn btn-danger btn-xs" href="/events/delete/<%= row._id %>"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
            <% })}else{ %>
                <tr>
                    <td colspan="6">No Record Found</td>

                </tr>
            <% } %>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
