<div class="card">
    <div class="card-header">
        <h3 class="card-title">Volunteer</h3>
        <div class="card-tools">
            <ul class="nav nav-pills ml-auto">
                <li class="nav-item">
                    <a class="btn btn-success" href="/volunteers/add">Add Volunteer</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="volunteer-list" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Education</th>
                <th>Residence Proof</th>
                <th>Job Details</th>
                <th>Why You Join</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <%if (data.length >0){ %>
                <% data.forEach(function(row){ %>
                    <tr>
                        <td><%= row.first_name %></td>
                        <td> <%= row.last_name %></td>
                        <td><%= row.email %></td>
                        <td><%= row.phone_number %></td>
                        <td><%= row.education %></td>
                        <td><%= row.residence_proof %></td>
                        <td><%= row.job_details %></td>
                        <td><%= row.why_you_join %></td>
                        <td><% if(row.image[0]){ %>
                                <img src="./uploads/<%= row.image[0].filename  %>" alt="profile image" width="80">
                            <% } %></td>
                        <td><a class="btn btn-primary btn-xs" href="/volunteers/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                            <a class="btn btn-danger btn-xs" href="/volunteers/delete/<%= row._id %>"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
            <% })}else{ %>
                <tr>
                    <td colspan="6">No Record Found</td>

                </tr>
            <% } %>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
